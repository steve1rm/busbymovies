<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTagLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/header_marginEnd"
        android:layout_marginStart="@dimen/header_marginStart"
        android:ellipsize="end"
        android:lines="1"
        android:fontFamily="sans-serif-thin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tagline_textsize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/view_line_margin"
        android:layout_marginEnd="@dimen/view_line_margin"
        android:layout_centerInParent="true"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tvRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/header_marginEnd"
        android:layout_marginBottom="@dimen/header_marginBottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:textColor="@android:color/white"
        android:textSize="@dimen/release_textsize"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/header_marginStart"
        android:layout_marginEnd="@dimen/header_marginEnd"
        android:layout_marginBottom="@dimen/header_marginBottom"
        android:layout_toStartOf="@id/tvRelease"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/title_textsize"
        android:fontFamily="sans-serif-condensed"/>

</RelativeLayout>