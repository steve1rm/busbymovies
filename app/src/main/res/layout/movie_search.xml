<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/movie_search"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"/>

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_close_black_24dp"/>

    <EditText
        android:id="@+id/etMovieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnClose"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:hint="@string/enter_name_of_movie"
        android:textSize="16sp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etMovieYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMovieName"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:hint="@string/year_of_movie_optional"
        android:textSize="16sp"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMovieYear"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/search"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/blue_button_bg"/>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/clear"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:background="@drawable/white_button_bg"/>
    </LinearLayout>
</RelativeLayout>
