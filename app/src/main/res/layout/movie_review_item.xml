<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/tvInitialReviewer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/avatar_s"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/tvInitialReviewer"
        android:background="@drawable/bubble_receiver"
        android:backgroundTint="@color/speech_bubble"
        android:gravity="top|start"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        tools:text="This is the content of this movie review, hope you injoy the show I know i will."/>

</RelativeLayout>