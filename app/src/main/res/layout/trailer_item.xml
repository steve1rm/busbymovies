<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:elevation="8dp"
        app:cardCornerRadius="4dp">

        <com.google.android.youtube.player.YouTubeThumbnailView
            android:id="@+id/youtubeThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="visible"/>

<!--
        <FrameLayout
            android:id="@+id/youtubeFragmentContainerItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
-->

        <TextView
            android:id="@+id/tvTrailerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/title_textsize"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/ivPlayTrailerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:tint="@android:color/white"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_play_circle_outline_black_64dp"
            android:contentDescription="@string/play_trailer_icon"/>
    </android.support.v7.widget.CardView>

</LinearLayout>